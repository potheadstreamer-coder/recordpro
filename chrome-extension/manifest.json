{
  "manifest_version": 3,
  "name": "RecordPro",
  "version": "1.0",
  "description": "Professional screen recorder with 4K support and AI enhancement.",
  "permissions": [
    "tabCapture",
    "storage",
    "downloads",
    "activeTab",
    "scripting",
    "offscreen",
    "desktopCapture"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "Open RecordPro"
    },
    "start_recording": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Start/Stop Recording"
    }
  }
}